<%- include('./layouts/header') %>
<body>
    <%- include('./layouts/navbar') %> 
    <div class="container">  
        <% if (stu) { %>  
            <h2>View student</h2>
            <form action="/update" method="post">
                <div class="form-group">
                    <label for="id">Id:</label>
                    <input type="text" class="form-control" placeholder="Enter Id" name="id" value="<%=stu.id%>" readonly>
                </div>
                <div class="form-group">
                <label for="username">User Name:</label>
                <input type="text" class="form-control" placeholder="Enter username" name="username" value="<%=stu.name%>">
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" placeholder="Enter email" name="email" value="<%=stu.email%>">
                </div>
                <div class="form-group">
                    <label for="course">Course:</label>
                    <input type="txt" class="form-control" placeholder="Enter course" name="course" value="<%=stu.course%>">
                </div>
                <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" placeholder="Enter password" name="pwd" value="<%=stu.password%>" readonly>
                </div> 
                <a href="/student"  class="btn btn-success">Back</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </form> 
        <% } else { %>
            <h2>Create student</h2>
            <p>Please fill the form below to create a new student !!!</p>
            <form action="/create" method="post">
                <div class="form-group">
                    <label for="id">Id:</label>
                    <input type="text" class="form-control" placeholder="Enter Id" name="id">
                  </div>
                <div class="form-group">
                  <label for="username">User Name:</label>
                  <input type="text" class="form-control" placeholder="Enter username" name="username">
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" placeholder="Enter email" name="email" >
                </div>
                <div class="form-group">
                    <label for="course">Course:</label>
                    <input type="txt" class="form-control" placeholder="Enter course" name="course" >
                </div>
                <div class="form-group">
                  <label for="pwd">Password:</label>
                  <input type="password" class="form-control" placeholder="Enter password" name="pwd">
                </div> 
                <a href="/student" class="btn btn-success">Back</a>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        <% } %>
    </div>
</body>

</html>
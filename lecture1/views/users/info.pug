extends ../layouts/common.pug

block content  
    .container
        h1 Info User 
        form(method='get', action='')
            .form-group
                input#address.form-control(type='text', name='name', placeholder='Name', readonly='true', value= user.name)  
            .row.form-group
                .col
                    input.form-control(type='text', name='age', placeholder='Age', value= user.age,readonly='true')
                .col
                    input.form-control(type='text', name='phone', placeholder='Phone', readonly='true', value= user.phone) 
            .form-group 
                input#address.form-control(type='text', name='address', placeholder='Address', readonly='true', value= user.address) 
            .d-flex 
                a.btn.btn-warning.m-1(href='/users') Back
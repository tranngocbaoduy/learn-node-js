extends ../layouts/common.pug

block content  
    .container
        h1 Create New 
        form(method='post', action='create')
            .form-group
                input#address.form-control(type='text', name='name', placeholder='Name', value= values?values.name: '')  
            .row.form-group
                .col
                    input.form-control(type='text', name='age', placeholder='Age', value= values ? values.age: '')
                .col
                    input.form-control(type='text', name='phone', placeholder='Phone', value= values? values.phone: '') 
            .form-group 
                input#address.form-control(type='text', name='address', placeholder='Address', value= values? values.address: '') 
            .form-group 
            if !message.status
                .alert.alert-danger(role='alert')= message.content  
            .d-flex
                button.btn.btn-primary.m-1(type='submit') Submit
                a.btn.btn-warning.m-1(href='/users') Back